.root {
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.15);
    flex: 0;
    height: fit-content;
    min-height: 100vh;
    min-width: 15%;
    position: relative;


    .title {
        font-weight: 500;
        margin: 1rem 0 0 0;
    }

    .paper {
        background-color: transparent;
        height: 100%;
        position: absolute;
        width: 100%;
    }

    .link {
        color: inherit;
        text-decoration: none;
    }
}